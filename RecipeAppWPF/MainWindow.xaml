<Window x:Class="RecipeAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Manager" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <TextBox x:Name="RecipeNameTextBox" Width="200" Text="Enter Recipe Name"/>
            <TextBox x:Name="NumIngredientsTextBox" Width="100" Margin="5,0,0,0" Text="Enter Ingredients"/>
            <TextBox x:Name="NumStepsTextBox" Width="100" Margin="5,0,0,0" Text="Enter Steps"/>
            <Button Content="Add Recipe" Click="AddRecipeButton_Click" Margin="5,0,0,0"/>
            <Button Content="Display Recipes" Click="DisplayRecipesButton_Click" Margin="5,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <TextBox x:Name="FilterIngredientTextBox" Width="200" Text="Filter by Ingredient"/>
            <ComboBox x:Name="FilterFoodGroupComboBox" Width="150" Margin="5,0,0,0">
                <ComboBoxItem Content="All" IsSelected="True"/>
                <ComboBoxItem Content="Vegetables"/>
                <ComboBoxItem Content="Fruits"/>
                <ComboBoxItem Content="Dairy"/>
                <ComboBoxItem Content="Protein"/>
                <ComboBoxItem Content="Grains"/>
            </ComboBox>
            <Slider x:Name="MaxCaloriesSlider" Width="200" Minimum="0" Maximum="1000" Value="300" Margin="5,0,0,0"/>
            <TextBlock Text="{Binding ElementName=MaxCaloriesSlider, Path=Value}" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <Button Content="Apply Filter" Click="ApplyFilterButton_Click" Margin="5,0,0,0"/>
        </StackPanel>

        <ListView x:Name="RecipesListView" Grid.Row="2" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Recipe Name" DisplayMemberBinding="{Binding RecipeName}"/>
                    <GridViewColumn Header="Total Calories" DisplayMemberBinding="{Binding TotalCalories}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
